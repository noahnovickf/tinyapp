<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(!username){ %>
      <form action="/login" method="POST">
        <input placeholder="Username" type="text" name="username" />
        <button
          type="submit"
          class="btn"
          style="color: rgba(0,0,0,0.4);border: 2px solid rgba(0,0,0,0.4)"
        >
          Login
        </button>
      </form>
      <% } else {%>
      <span
        style="color: rgba(255, 255, 255, 0.5); font-size: 16px; vertical-align: middle; padding-right: 15px;"
        >Logged in as <%= username %></span
      >
      <form action="/logout" method="POST">
        <button
          type="submit"
          class="btn"
          style="color: rgba(0,0,0,0.4);border: 2px solid rgba(0,0,0,0.4)"
        >
          Logout
        </button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
